<div class="container w-100 p-5 d-flex">
  <button class="btn btn-primary m-auto">Kembali</button>
</div>

<div class="container">
  {{#each data}}
  <form class="mt-5" method="POST" action="/api/edit" enctype="multipart/form-data">
    <input type="hidden" name="id" value={{id}}>
    <div class="form-group">
      <label>Nama Produk</label>
      <input type="text" class="form-control" name="nama" value="{{product_name}}">
    </div>
    <div class="form-group">
      <label>Harga Produk </label>
      <input type="text" class="form-control" name="harga" value="{{product_price}}">
    </div>
    <div class="form-group d-flex flex-column">
      <label>Gambar Produk</label>
      <input type="file" name="gambar">
    </div>
    <div class="form-group">
    <button id="edit" type="submit" class="btn btn-primary">Submit</button>
  </form>
  {{/each}}
</div>